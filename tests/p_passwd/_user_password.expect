#!/usr/bin/expect -d
# Author: Iain Douglas <centos@1n6.org.uk>

set timeout 10
match_max 6000
spawn su passtest -c passwd
expect  -re "(UNIX|Current) password:" { send -- "passtest\r" }
expect { 
	 "You must wait longer to change your password" 
	     {
	      exit 2 
	     }
	 "Authentication token manipulation error"
	     {
	      exit 3
	     }
	 "Current Password:" { 
	      send -- "passtest\r"    
              expect {
		"Authentication token manipulation error"
	        {
	         exit 3
	        }
	     }
	 }
	 "password:" 
	     {
	      send -- "ano24ther\r"
	      expect "*?\[pP]assword:*"
	      send -- "ano24ther\r"
	      expect eof 
	     }
}

